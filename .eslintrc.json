{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier", "@tanstack/query"],
  "parserOptions": {
    "project": "./tsconfig.json",
    "createDefaultProgram": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ignorePatterns": ["node_modules/"],
  "extends": [
    "next/core-web-vitals",
    "plugin:import/typescript",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "import/order": [
      "warn",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "sibling",
          "parent",
          "index",
          "type",
          "unknown"
        ],
        "pathGroups": [
          {
            "pattern": "{react*,react/**/*,next*,next/**/*}",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "{@services/**/*,@tanstack/**/*,axios,@hooks/**/*}",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "{@features/**/*}",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "{@emotion/**/*,@mui*,@mui/**/*,@components/**/*,@theme/**/*}",
            "group": "external",
            "position": "after"
          }
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "pathGroupsExcludedImportTypes": ["builtin"]
      }
    ],
    "react/jsx-props-no-spreading": "off",
    "prettier/prettier": "error",
    "object-curly-newline": [
      "error",
      { "multiline": true, "consistent": true }
    ],
    "react/jsx-curly-brace-presence": [
      "warn",
      { "props": "always", "children": "never", "propElementValues": "always" }
    ],
    "@tanstack/query/exhaustive-deps": "error",
    "@tanstack/query/no-rest-destructuring": "warn",
    "@tanstack/query/stable-query-client": "error",
    "@typescript-eslint/no-unused-vars": "warn"
  }
}
